<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_bar_gradient">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_pic"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                      />

                    <ImageView

                        android:id="@+id/camera_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="-40dp"
                        android:layout_marginBottom="35dp"
                        android:layout_toRightOf="@id/img_pic"
                        android:contentDescription="change image"
                        android:src="@drawable/icon_camera"
                        android:visibility="gone" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <com.tekrevol.mantra.widget.AnyTextView
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        android:textAllCaps="true"
                        android:textColor="@color/txtBlack"
                        android:textSize="20sp"
                        app:typeface="@string/font_medium" />

                    <com.tekrevol.mantra.widget.AnyEditTextView
                        android:id="@+id/edttxt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="CHRIS MAXWELL"
                        android:textAllCaps="true"
                        android:textColor="@color/txtBlack"
                        android:textSize="20sp"
                        android:visibility="gone"
                        android:singleLine="true"
                        app:typeface="@string/font_medium" />

                    <com.tekrevol.mantra.widget.AnyTextView
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/base_blue"
                        app:typeface="@string/font_regular" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/x10dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6" />


                        <LinearLayout
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.tekrevol.mantra.widget.AnyTextView

                                android:id="@+id/txtmantracount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/txtBlack"
                                android:textSize="20sp" />

                            <com.tekrevol.mantra.widget.AnyTextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@null"
                                android:gravity="center"
                                android:text="Mantras"
                                app:typeface="@string/font_regular" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/txtGrey" />

                        <LinearLayout
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.tekrevol.mantra.widget.AnyTextView

                                android:id="@+id/txtsharedmantracount"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/txtBlack"
                                android:textSize="20sp" />

                            <com.tekrevol.mantra.widget.AnyTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:contentDescription="@null"
                                android:gravity="center"
                                android:text="Shares"
                                app:typeface="@string/font_regular" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.6" />


                    </LinearLayout>

                    <com.tekrevol.mantra.widget.AnyTextView

                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5dp"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:contentDescription="@null"
                        android:text="ABOUT"
                        android:textColor="@color/txtBlack"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:typeface="@string/font_medium" />

                    <com.tekrevol.mantra.widget.AnyTextView
                        android:id="@+id/txtAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:text="about"
                        android:textSize="15sp"
                        android:visibility="gone"
                        app:typeface="@string/font_regular" />


                    <com.tekrevol.mantra.widget.AnyEditTextView
                        android:id="@+id/edttxtAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/x5dp"
                        android:hint="about"
                        android:textSize="15sp"
                        android:visibility="gone"
                        android:singleLine="true"
                        app:typeface="@string/font_regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/sheduledmantra"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:src="@drawable/calendar" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="SCHEDULED MANTRAS"
                                android:textColor="@color/c_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sharedmantra"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:src="@drawable/sharemantra" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="PUBLIC MANTRAS"
                                android:textColor="@color/c_black" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/favmantra"

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:src="@drawable/unfav2" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="FAVOURITE MANTRAS"
                                android:textColor="@color/c_black" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/draftmantra"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                android:gravity="center|start"
                                android:src="@drawable/drft" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center|start"
                                android:text="PRIVATE MANTRAS"
                                android:textColor="@color/c_black" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <com.tekrevol.mantra.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:contentDescription="@null"
                            android:text="MY MANTRA"
                            android:textColor="@color/txtBlack"
                            android:textSize="15sp"
                            app:typeface="@string/font_medium" />

                        <com.tekrevol.mantra.widget.AnyTextView
                            android:id="@+id/txt_seeall_mantra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:contentDescription="view all my mantra"
                            android:text="View All"
                            android:textColor="@color/txtBlack"
                            android:textSize="12sp"

                            app:typeface="@string/font_medium" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-10dp"
                android:background="#FBE1CB"
                android:padding="@dimen/x10dp"
                app:corner_radius="@dimen/x20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tabs"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <com.tekrevol.mantra.widget.AnyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/x5dp"
                            android:contentDescription="@null"
                            android:text="SHARED MANTRA"
                            android:textColor="@color/txtBlack"
                            android:textSize="15sp"
                            app:typeface="@string/font_medium" />

                        <com.tekrevol.mantra.widget.AnyTextView
                            android:id="@+id/txt_seeall_movieline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:contentDescription="view all shared mantra"
                            android:text="View All"
                            android:textColor="@color/txtBlack"
                            android:textSize="12sp"
                            app:typeface="@string/font_medium" />


                    </RelativeLayout>


                    <com.todkars.shimmer.ShimmerRecyclerView
                        android:id="@+id/recyclerview_movie_lines"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x250dp"
                        android:layout_marginBottom="10dp"
                        tools:listitem="@layout/customlist_movielines">

                    </com.todkars.shimmer.ShimmerRecyclerView>


                </LinearLayout>

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>