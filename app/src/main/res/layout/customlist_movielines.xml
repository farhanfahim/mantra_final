<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/x5dp"
            android:orientation="horizontal">

            <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
                android:layout_width="55dp"
                app:corner_radius="@dimen/x5dp"
                android:layout_height="match_parent">

                <ImageView

                    android:contentDescription="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_toEndOf="@id/layout3"
                    android:layout_toRightOf="@id/layout3"
                    android:background="@null"
                    android:src="@drawable/img" />

            </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.8"

                android:focusable="true"
                android:orientation="vertical">


                <com.tekrevol.mantra.widget.AnyTextView
                    android:id="@+id/txt_moviename_movielines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:minLines="1"
                    android:text="Children Group Laughing"
                    android:textColor="#303843"
                    android:textSize="@dimen/s15"
                    app:typeface="@string/font_medium" />

                <com.tekrevol.mantra.widget.AnyTextView
                    android:id="@+id/txt_mtime_movielines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x5dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="15 sec"
                    android:textColor="#999FAB"
                    app:typeface="@string/font_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center">

                <ImageButton
                    android:contentDescription="play"
                    android:padding="10dp"
                    android:id="@+id/img_playbtn_movielines"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_toEndOf="@id/layout3"
                    android:layout_toRightOf="@id/layout3"
                    android:background="@null"
                    android:src="@drawable/icon_play_light" />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>